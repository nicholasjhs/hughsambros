{
  "name": "hugo-npm-starter",
  "version": "1.0.0",
  "description": "Streamline process to minify, bundle CSS & js files, optimize and resize images.",
  "keywords": [
    "npm",
    "css",
    "js",
    "images"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "img:optimize": "imagemin ./themes/osaron/static/assets/images/uploads/* -o ./themes/osaron/static/assets/images/uploads ",
    "cleanpublic": "rm -Rf ./public",

    "prehugo": "npm run cleanpublic",
    "hugo": "hugo",

    "img:resizefull": "image-batch-resizer -d './themes/osaron/static/assets/images/uploads' -p 'full-' -s '1920x1920>' ",
    "postimg:resizefull": "mv ./themes/osaron/static/assets/images/uploads/full-* ./themes/osaron/static/assets/images/hsb/full 2>/dev/null || : && renamer --find 'full-' --replace '' ./themes/osaron/static/assets/images/hsb/full/* ",

    "img:resizehalf": "image-batch-resizer -d './themes/osaron/static/assets/images/uploads' -p 'half-' -s '1200x1200>' ",
    "postimg:resizehalf": "mv ./themes/osaron/static/assets/images/uploads/half-* ./themes/osaron/static/assets/images/hsb/half 2>/dev/null || : && renamer --find 'half-' --replace '' ./themes/osaron/static/assets/images/hsb/half/* ",

    "img:resizequart": "image-batch-resizer -d './themes/osaron/static/assets/images/uploads' -p 'quart-' -s '800x800>' ",
    "postimg:resizequart": "mv ./themes/osaron/static/assets/images/uploads/quart-* ./themes/osaron/static/assets/images/hsb/quart 2>/dev/null || : && renamer --find 'quart-' --replace '' ./themes/osaron/static/assets/images/hsb/quart/* ",

    "img:resizeeight": "image-batch-resizer -d './themes/osaron/static/assets/images/uploads' -p 'eight-' -s '400x400>' ",
    "postimg:resizeeight": "mv ./themes/osaron/static/assets/images/uploads/eight-* ./themes/osaron/static/assets/images/hsb/eight 2>/dev/null || : && renamer --find 'eight-' --replace '' ./themes/osaron/static/assets/images/hsb/eight/* ",

    "img:resizethumb": "image-batch-resizer -d './themes/osaron/static/assets/images/uploads' -p 'thumb-' -R 'yes' -s '100x100>' ",
    "postimg:resizethumb": "mv ./themes/osaron/static/assets/images/uploads/thumb-* ./themes/osaron/static/assets/images/hsb/thumb 2>/dev/null || : && renamer --find 'thumb-' --replace '' ./themes/osaron/static/assets/images/hsb/thumb/* ",

    "img:resizeuploads": "npm run img:resizefull && npm run img:resizehalf && npm run img:resizequart && npm run img:resizeeight && npm run img:resizethumb",

    "prebuild:img": "npm run img:optimize",
    "build:img": "npm run img:resizeuploads",

    "build": "npm run build:img && npm run hugo"
  },
  "author": "Nicholas Hugh Sam",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^14.5.0",
    "browserify-css": "^0.14.0",
    "clean-css-cli": "^4.1.10",
    "image-batch-resizer": "^0.8.1",
    "imagemin-cli": "^3.0.0",
    "imagemin-pngquant": "^5.0.1",
    "onchange": "^3.3.0",
    "parallelshell": "^3.0.2",
    "renamer": "^0.6.1",
    "resize-img-cli": "^1.0.0",
    "uglify-js": "^3.3.4"
  }
}
