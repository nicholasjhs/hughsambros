{
  "name": "hugo-npm-starter",
  "version": "1.0.0",
  "description": "Streamline process to minify, bundle CSS & js files, optimize and resize images",
  "keywords": [
    "npm",
    "css",
    "js",
    "images"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "uglify": "mkdir -p ../static/assets/js && uglifyjs ./assets/src-js/*.js -m -o ../static/assets/js/app.js && uglifyjs ./assets/src-js/*.js -m -c -o ../static/assets/js/app.min.js",
    "css": "mkdir -p ../static/assets/css && cleancss ./assets/src-css/*.css -o ../static/assets/css/main.min.css",
    "img:optimizefull": "mkdir -p ../static/assets/images/hsb/full && imagemin ./assets/src-images/full/* -o ../static/assets/images/hsb/full",
    "img:optimizehalf": "mkdir -p ../static/assets/images/hsb/half && imagemin ./assets/src-images/half/* -o ../static/assets/images/hsb/half",
    "img:optimizequart": "mkdir -p ../static/assets/images/hsb/quart && imagemin ./assets/src-images/quart/* -o ../static/assets/images/hsb/quart",
    "img:optimizethumb": "mkdir -p ../static/assets/images/hsb/thumb && imagemin ./assets/src-images/thumb/* -o ../static/assets/images/hsb/thumb",
    "build:img": "npm run img:optimizefull && npm run img:optimizehalf && npm run img:optimizequart && npm run img:optimizethumb",
    "build": "npm run css && npm run uglify && npm run build:img"
  },
  "author": "Nicholas Hugh Sam",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^14.5.0",
    "browserify-css": "^0.14.0",
    "clean-css-cli": "^4.1.10",
    "imagemin-cli": "^3.0.0",
    "onchange": "^3.3.0",
    "parallelshell": "^3.0.2",
    "resize-img-cli": "^1.0.0",
    "uglify-js": "^3.3.4"
  }
}
