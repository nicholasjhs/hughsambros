{
  "name": "hugo-npm-starter",
  "version": "1.0.0",
  "description": "Streamline process to minify, bundle CSS & js files, optimize and resize images.",
  "keywords": [
    "npm",
    "css",
    "js",
    "images"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "uglify": "mkdir -p ../static/assets/js && uglifyjs ./assets/src-js/*.js -m -o ../static/assets/js/app.js && uglifyjs ./assets/src-js/*.js -m -c -o ../static/assets/js/app.min.js",
    "css": "mkdir -p ../static/assets/css && cleancss ./assets/src-css/*.css -o ../static/assets/css/main.min.css",
    "movefiles": "mv -v ./assets/src-images/test/half-* ../static/assets/images/hsb/test ",
    "img:optimize": "mkdir -p ./assets/src-images/optimized && imagemin ../originals/* -o ./assets/src-images/optimized",
    "img:resizefull": "image-batch-resizer -d '.assets/src-images/optimized' -s '1920x1920>' -p 'full-' ",
    "postimg:resizefull": "mkdir -p ../static/assets/images/hsb/full && mv ./assets/src-images/optimized/full-* ../static/assets/images/hsb/full && renamer --find 'full-' --replace '' ../static/assets/images/hsb/full",
    "img:resizehalf": "image-batch-resizer -d '.assets/src-images/optimized' -s '1200x1200>' -p 'half-' ",
    "postimg:resizehalf": "mkdir -p ../static/assets/images/hsb/half && mv ./assets/src-images/optimized/half-* ../static/assets/images/hsb/half && renamer --find 'half-' --replace '' ../static/assets/images/hsb/half",
    "img:resizequart": "image-batch-resizer -d '.assets/src-images/optimized' -s '800x800>' -p 'quart-' ",
    "postimg:resizequart": "mkdir -p ../static/assets/images/hsb/quart && mv ./assets/src-images/optimized/quart-* ../static/assets/images/hsb/quart && renamer --find 'quart-' --replace '' ../static/assets/images/hsb/quart",
    "img:resizethumb": "image-batch-resizer -d '.assets/src-images/optimized' -s '400x400>' -p 'thumb-' ",
    "postimg:resizethumb": "mkdir -p ../static/assets/images/hsb/thumb && mv ./assets/src-images/optimized/thumb-* ../static/assets/images/hsb/thumb && renamer --find 'thumb-' --replace '' ../static/assets/images/hsb/thumb",
    "prebuild:img": "npm run img:optimize",
    "build:img": "npm run img:resizefull && npm run img:resizehalf && npm run img:resizequart && npm run img:resizethumb",
    "build": "npm run css && npm run uglify && npm run build:img"
  },
  "author": "Nicholas Hugh Sam",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^14.5.0",
    "browserify-css": "^0.14.0",
    "clean-css-cli": "^4.1.10",
    "image-batch-resizer": "^0.8.1",
    "imagemin-cli": "^3.0.0",
    "imagemin-pngquant": "^5.0.1",
    "onchange": "^3.3.0",
    "parallelshell": "^3.0.2",
    "renamer": "^0.6.1",
    "resize-img-cli": "^1.0.0",
    "uglify-js": "^3.3.4"
  }
}
