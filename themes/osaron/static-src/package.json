{
  "name": "hugo-npm-starter",
  "version": "1.0.0",
  "description": "Streamline process to minify, bundle CSS & js files, optimize and resize images.",
  "keywords": [
    "npm",
    "css",
    "js",
    "images"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "uglify": "mkdir -p ../static/assets/js && uglifyjs ./assets/src-js/*.js -m -o ../static/assets/js/app.js && uglifyjs ./assets/src-js/*.js -m -c -o ../static/assets/js/app.min.js",
    "css": "mkdir -p ../static/assets/css && cleancss ./assets/src-css/*.css -o ../static/assets/css/main.min.css",
    "img:optimize": "mkdir -p ./assets/src-images/optimized && imagemin ../originals/* -o ./assets/src-images/optimized",
    "cleanimages": "rm ../static/assets/images/hsb/full-temp/* && rm ../static/assets/images/hsb/half-temp/* && rm ../static/assets/images/hsb/quart-temp/* && rm ../static/assets/images/hsb/thumb-temp/*",
    "cleanpublic": "rm -Rf ../../../public",

    "preimg:resizefull": "mkdir -p ../static/assets/images/hsb/full-temp && mkdir -p ../static/assets/images/hsb/full",
    "img:resizefull": "image-batch-resizer -d './assets/src-images/optimized' -s '1920x1920>' -p 'full-' && mv ./assets/src-images/optimized/full-* ../static/assets/images/hsb/full-temp",
    "postimg:resizefull": "renamer --find 'full-' --replace '' ../static/assets/images/hsb/full-temp/* && mv -n ../static/assets/images/hsb/full-temp/* ../static/assets/images/hsb/full",

    "preimg:resizehalf": "mkdir -p ../static/assets/images/hsb/half-temp && mkdir -p ../static/assets/images/hsb/half",
    "img:resizehalf": "image-batch-resizer -d './assets/src-images/optimized' -s '1200x1200>' -p 'half-' && mv ./assets/src-images/optimized/half-* ../static/assets/images/hsb/half-temp",
    "postimg:resizehalf": "renamer --find 'half-' --replace '' ../static/assets/images/hsb/half-temp/* && mv -n ../static/assets/images/hsb/half-temp/* ../static/assets/images/hsb/half",

    "preimg:resizequart": "mkdir -p ../static/assets/images/hsb/quart-temp && mkdir -p ../static/assets/images/hsb/quart",
    "img:resizequart": "image-batch-resizer -d './assets/src-images/optimized' -s '800x800>' -p 'quart-' && mv ./assets/src-images/optimized/quart-* ../static/assets/images/hsb/quart-temp",
    "postimg:resizequart": "renamer --find 'quart-' --replace '' ../static/assets/images/hsb/quart-temp/* && mv -n ../static/assets/images/hsb/quart-temp/* ../static/assets/images/hsb/quart",

    "preimg:resizethumb": "mkdir -p ../static/assets/images/hsb/thumb-temp && mkdir -p ../static/assets/images/hsb/thumb",
    "img:resizethumb": "image-batch-resizer -d './assets/src-images/optimized' -s '400x400>' -p 'thumb-' && mv ./assets/src-images/optimized/thumb-* ../static/assets/images/hsb/thumb-temp",
    "postimg:resizethumb": "renamer --find 'thumb-' --replace '' ../static/assets/images/hsb/thumb-temp/* && mv -n ../static/assets/images/hsb/thumb-temp/* ../static/assets/images/hsb/thumb",

    "prebuild:img": "npm run img:optimize",
    "build:img": "parallelshell 'npm run img:resizefull' 'npm run img:resizehalf' 'npm run img:resizequart' 'npm run img:resizethumb' ",
    "postbuild:img": "npm run cleanimages",

    "prebuild": "npm run cleanpublic",
    "build": "npm run build:img"
  },
  "author": "Nicholas Hugh Sam",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^14.5.0",
    "browserify-css": "^0.14.0",
    "clean-css-cli": "^4.1.10",
    "image-batch-resizer": "^0.8.1",
    "imagemin-cli": "^3.0.0",
    "imagemin-pngquant": "^5.0.1",
    "onchange": "^3.3.0",
    "parallelshell": "^3.0.2",
    "renamer": "^0.6.1",
    "resize-img-cli": "^1.0.0",
    "uglify-js": "^3.3.4"
  }
}
